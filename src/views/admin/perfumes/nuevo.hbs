<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
  <h1 style="color: var(--accent);">Nuevo Perfume</h1>
  <a href="/admin/perfumes" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Volver
  </a>
</div>

<div class="form-container" style="max-width: 800px;">
  <form id="perfume-form" enctype="multipart/form-data" class="responsive-form">
    <div class="form-row">
      <div class="form-group">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" id="nombre" name="nombre" class="form-input" required>
      </div>
      
      <div class="form-group">
        <label for="marca" class="form-label">Marca</label>
        <input type="text" id="marca" name="marca" class="form-input" required>
      </div>
    </div>
    
    <div class="form-group">
      <label for="descripcion" class="form-label">Descripción</label>
      <textarea id="descripcion" name="descripcion" class="form-textarea" rows="4"></textarea>
    </div>
    
    <div class="form-row three-columns">
      <div class="form-group">
        <label for="precio" class="form-label">Precio ($)</label>
        <input type="number" id="precio" name="precio" step="0.01" class="form-input" required>
      </div>
      
      <div class="form-group">
        <label for="tipo" class="form-label">Tipo</label>
        <select id="tipo" name="tipo" class="form-select" required>
          <option value="Eau de Parfum">Eau de Parfum</option>
          <option value="Eau de Toilette">Eau de Toilette</option>
          <option value="Parfum">Parfum</option>
          <option value="Eau Fraiche">Eau Fraiche</option>
          <option value="Cologne">Cologne</option>
        </select>
      </div>
      
      <div class="form-group">
        <label for="genero" class="form-label">Género</label>
        <select id="genero" name="genero" class="form-select" required>
          <option value="Masculino">Masculino</option>
          <option value="Femenino">Femenino</option>
          <option value="Unisex">Unisex</option>
        </select>
      </div>
    </div>
    
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
      <div class="form-group">
        <label for="tamano" class="form-label">Tamaño</label>
        <input type="text" id="tamano" name="tamano" class="form-input" value="100ml">
      </div>
      
      <div class="form-group">
        <label for="stock" class="form-label">Stock</label>
        <input type="number" id="stock" name="stock" class="form-input" value="0" required>
      </div>
    </div>
    
    <div class="form-group">
      <label for="imagen" class="form-label">Imagen</label>
      <input type="file" id="imagen" name="imagen" class="form-input">
    </div>
    
    <button type="submit" class="btn btn-primary btn-block">
      <i class="fas fa-save"></i> Guardar Perfume
    </button>
  </form>
</div>